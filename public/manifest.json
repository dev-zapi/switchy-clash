{
  "manifest_version": 3,
  "name": "Switchy Clash",
  "description": "A Chrome extension to view and control your Clash proxy configuration via API.",
  "version": "1.0.0",
  "permissions": [
    "proxy",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:*/*",
    "http://localhost:*/*"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-off-16.png",
      "32": "icons/icon-off-32.png",
      "48": "icons/icon-off-48.png",
      "128": "icons/icon-off-128.png"
    },
    "default_title": "Switchy Clash"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-off-16.png",
    "32": "icons/icon-off-32.png",
    "48": "icons/icon-off-48.png",
    "128": "icons/icon-off-128.png"
  }
}
